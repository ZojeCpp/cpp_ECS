{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/src"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "cStandard": "c23",
            "cppStandard": "gnu++23",
            "intelliSenseMode": "windows-clang-x86",
            "compilerArgs": [
                "-Wall",
                "-Wconversion",
                "-Wpedantic",
                "-Wextra"
            ]
        }
    ],
    "version": 4
}